% slide transition
\AtBeginSection[]
{
  \begin{frame}<beamer> 
    \frametitle{Agenda}
    \tableofcontents[currentsection, hideallsubsections]
  \end{frame}
}

% font size on the frame subtitle
\setbeamerfont{framesubtitle}{size=\normalsize}


% navigation symbols -- footnote
% http://www.shawnlankton.com/2008/02/beamer-and-latex-with-keynote-theme/
\setbeamertemplate{navigation symbols}{} %no nav symbols
\setbeamercolor{mycolor}{fg=blue!40,bg=blue!16.5}
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[ht=4ex,leftskip=2cm,rightskip=.3cm]{mycolor}
    \vspace{0.075cm}
    \insertdate \hfill \insertshortauthor \hfill \inserttitle
    \hfill \insertshortinstitute \hfill \insertframenumber /\inserttotalframenumber
  \end{beamercolorbox}
  % \vspace*{0.1cm}
}

